{
    "manifest_version": 3,
    "name": "Cortex",
    "version": "1.0.0",
     "host_permissions": ["<all_urls>"],
    "description": "The Extension that is working with the browser for easiness",
    "icons": {
    "16": "./logo.png"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "action": {
        "default_icon": {
            "16": "logo.png"
        },
        "default_title": "Open Cortex Side Panel"
    },
    "permissions": [
        "sidePanel",
        "tabs",
        "scripting",
        "activeTab",
        "storage"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+B",
                "mac": "Command+B"
            },
            "description": "Toggle the side panel"
        }
    }
}